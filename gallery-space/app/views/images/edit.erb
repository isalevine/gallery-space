<h2>Edit image</h2>
<%@image = Image.find(params[:id])%>
<%=form_tag(user_gallery_image_path(current_user.id, params[:gallery_id], @image), :method => :patch) do %>
<%=label_tag :title%>
<%=text_field_tag "image[title]", @image.title%>
<%=label_tag :artist%>
<%=text_field_tag "image[artist]", @image.artist%>
<%=label_tag :medium%>
<%=text_field_tag "image[medium]", @image.medium%>
<%=submit_tag "submit"%>
<%end%>
