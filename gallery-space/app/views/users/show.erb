<div><h1>User Show</h1></div>

<div>
  <h2><%= @user.user_name %></h2>
  Real Name: <%= @user.user_name %>
  Location: <%= @user.location %>
  Age: <%= @user.age %>
  Blurb: <%= @user.blurb %>
  <br><br>

  <% @user.galleries.each do |galley| %>
    <p><%= link_to gallery.name, gallery_path(gallery) %></p>
  <% end %>
</div>


<br>
<div>
  <p><%= link_to 'Create New Gallery', new_gallery_path(user_id: @user.id) %></p>
</div>

<br>
<div>
  <p><%= link_to 'Edit User', edit_user_path(@user) %></p>
</div>

<br>
<div>
  <p><%= link_to 'User Index', users_path %></p>
</div>
